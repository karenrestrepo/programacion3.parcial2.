<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.programacion3.parcial2.parcial2.Ejercicio3.Controller.PedidosController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Cliente:" />
                <ComboBox fx:id="cmbClientes" prefWidth="200.0" GridPane.columnIndex="1" />

                <Label text="Producto:" GridPane.rowIndex="1" />
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <ComboBox fx:id="cmbProductos" prefWidth="200.0" />
                    <Button onAction="#agregarProducto" text="Agregar" />
                </HBox>

                <Label text="Fecha:" GridPane.rowIndex="2" />
                <DatePicker fx:id="dpFecha" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <TableView fx:id="tblProductosSeleccionados" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="colCodigo" prefWidth="100.0" text="CÃ³digo" />
                <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button onAction="#quitarProducto" text="Quitar Producto" />
            <Label text="Total:" />
            <Label fx:id="lblTotal" style="-fx-font-weight: bold;" text="0.00" />
        </HBox>

        <Button onAction="#realizarPedido" text="Realizar Pedido" />
    </children>
</VBox>
